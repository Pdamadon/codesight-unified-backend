{
  "manifest_version": 3,
  "name": "CodeSight Shopping Tracker",
  "version": "1.0.0",
  "description": "Captures shopping behavior for research purposes",
  
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "webNavigation",
    "notifications",
    "tabs",
    "tabCapture",
    "desktopCapture"
  ],
  
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["enhanced-content-script.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["*://*.vercel.app/*", "*://localhost:*/*"],
      "js": ["wakeup-script.js"],
      "run_at": "document_start"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "CodeSight Tracker"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["content-script.js"],
      "matches": ["<all_urls>"]
    }
  ]
}