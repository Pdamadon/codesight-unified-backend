# Database Configuration
DATABASE_URL="postgresql://user:password@localhost:5432/codesight?schema=public"

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration (REQUIRED - generate a secure secret)
JWT_SECRET=your-secure-jwt-secret-here-change-this

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=codesight-screenshots

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_TIMEOUT_MINUTES=30
MAX_SESSIONS_PER_USER=5

# Processing Configuration
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT_MS=300000
MAX_RETRIES=3

# Screenshot Configuration
MAX_SCREENSHOT_SIZE_MB=5
SCREENSHOT_COMPRESSION_QUALITY=0.8

# Data Retention
DATA_RETENTION_DAYS=90
ARCHIVE_CLEANUP_INTERVAL_HOURS=24